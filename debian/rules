#!/usr/bin/make -f

export INSTALL_MOD_DIR:=extra

PACKAGE_NAME := platform-modules-z9100
KVERSION   ?= $(shell uname -r)
KERNEL_SRC :=  /lib/modules/$(KVERSION)
MODULE_SRC := $(shell pwd)/modules

%:
	dh $@

define install_modules
dh_installdirs -p${1} $(KERNEL_SRC)/$(INSTALL_MOD_DIR)
(for mod in ${2}; do cp $(MODULE_SRC)/$${mod}.ko debian/${1}/$(KERNEL_SRC)/$(INSTALL_MOD_DIR); done)
endef

override_dh_auto_build:
	make -C $(KERNEL_SRC)/build M=$(MODULE_SRC)

override_dh_auto_install:
	$(call install_modules,platform-modules-s6100,dell_s6100_iom_cpld dell_s6100_lpc)
	$(call install_modules,platform-modules-z9100,dell_mailbox dell_z9100_cpld)

override_dh_usrlocal:

override_dh_pysupport:

override_dh_clean:
	dh_clean
	rm -f $(MODULE_SRC)/*.o $(MODULE_SRC)/*.ko $(MODULE_SRC)/*.mod.c $(MODULE_SRC)/.*.cmd
	rm -f $(MODULE_SRC)/Module.markers $(MODULE_SRC)/Module.symvers $(MODULE_SRC)/modules.order
	rm -rf $(MODULE_SRC)/.tmp_versions

